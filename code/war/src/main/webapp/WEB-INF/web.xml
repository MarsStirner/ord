<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <description>E5 Documents Management System</description>
    <display-name>E5 Documents Management System</display-name>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <servlet>
        <description>Faces Servlet</description>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fileDownloadServlet</servlet-name>
        <servlet-class>ru.efive.dms.uifaces.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileDownloadServlet</servlet-name>
        <url-pattern>/component/file/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>ru.efive.dms.uifaces.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/component/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UploadFilter</filter-name>
        <filter-class>ru.efive.uifaces.filter.UploadFilter</filter-class>
        <init-param>
            <param-name>UPLOAD_MAX_SIZE</param-name>
            <param-value>10485760000</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UploadFilter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>ResourceCacheControlFilter</filter-name>
        <filter-class>ru.efive.uifaces.filter.ResourceCacheControlFilter</filter-class>
        <init-param>
            <param-name>QUERY_STRING_PATTERN</param-name>
            <param-value>ln=e5ui/.*</param-value>
        </init-param>
        <!--<init-param>
            <param-name>FORCE_NO_CACHE</param-name>
            <param-value>true</param-value>
        </init-param>-->
    </filter>
    <filter-mapping>
        <filter-name>ResourceCacheControlFilter</filter-name>
        <url-pattern>/javax.faces.resource/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>javax.faces.PARTIAL_STATE_SAVING</param-name>
        <param-value>false</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/classes/applicationContext.xml</param-value>
    </context-param>

    <!--This is basically GET request based. Every GET request creates a new logical view.-->
    <context-param>
        <param-name>com.sun.faces.numberOfViewsInSession</param-name>
        <param-value>50</param-value>
    </context-param>
    <!--
        This is basically synchronous (non-ajax!) POST request based.
        Every synchronous POST request creates a new physical view.
        They are all stored on basis of a logical view like so Map<LogicalView, Map<PhysicalView, ViewState>>.
    -->
    <context-param>
        <param-name>com.sun.faces.numberOfLogicalViews</param-name>
        <param-value>50</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>

    <!--Тема для элементов из библиотеки primefaces-->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>

    <!--Do not evaluate EL in comments-->
    <context-param>
        <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>

</web-app>
