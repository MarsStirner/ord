        <property name="ldapAddressName" value="${ldap.address.name}"/>
        <property name="ldapAddressValue" value="${ldap.address.value}"/>
        <property name="loginName" value="${ldap.login.name}"/>
        <property name="loginValue" value="${ldap.address.value}"/>
        <property name="passwordName" value="${ldap.password.name}"/>
        <property name="passwordValue" value="${ldap.password.value}"/>
